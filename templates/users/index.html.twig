{% extends 'base.html.twig' %}

{% block title %}Hello UsersController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }

    ul{ list-style: none; }

</style>

<div class="example-wrapper">

    <div class="container mt-5">

        Utilisateurs :

        {% if users %}
                    <ul>
                        {% for user in users %}
                        <li>
                            <div class="card text-center">
                                <div class="card-body">
                                    <div class="card-title">
                                        {{ user.nom }}
                                    </div>
                                    <div class="card-text">
                                        
                                    </div>

                                    <form action="users/infos" method="GET">
                                        <button class="btn btn-info">Infos id nÂ°{{ user.id }}</button>
                                        <input type="hidden" name="id" value="{{ user.id }}">
                                        <input type="hidden" name="nom" value="{{ user.nom }}">
                                        <input type="hidden" name="prenom" value="{{ user.prenom }}">
                                    </form>
                                </div>
                            </div>
                        </li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <p>Il n'y a aucun utilisateur</p>

        {% endif %}

    <p>Formulaire:</p> 
        {{ form(IdentificationForm) }}
    </div>

</div>
{% endblock %}
